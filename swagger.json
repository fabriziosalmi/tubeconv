            "example": "2025-06-14T10:30:00.000Z"
          },
          "uptime": {
            "type": "number",
            "description": "Server uptime in seconds",
            "example": 86400
          },
          "memory": {
            "type": "object",
            "properties": {
              "rss": {
                "type": "number",
