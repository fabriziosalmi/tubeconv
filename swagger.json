    {
      "url": "http://localhost:3000",
      "description": "Development server"
    },
    {
      "url": "https://api.tubeconv.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Conversion",
      "description": "Single video conversion operations"
    },
    {
      "name": "Batch",
      "description": "Batch and playlist conversion operations"
    },
    {
      "name": "Format",
      "description": "Multi-format conversion operations (MP3, WAV, FLAC, MP4)"
    },
    {
      "name": "Health",
      "description": "API health and status endpoints"
    }
  ],
  "paths": {
    "/api/preview": {
      "post": {
        "tags": ["Conversion"],
        "summary": "Preview video information",
        "description": "Get video metadata without downloading or converting. This endpoint provides a quick way to preview video details before conversion.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PreviewRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Video preview retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PreviewResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/convert": {
      "post": {
        "tags": ["Conversion"],
        "summary": "Convert YouTube video to MP3",
        "description": "Download and convert a YouTube video to MP3 format with customizable quality and metadata options.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConvertRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Conversion completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ConvertResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Conversion failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check",
        "description": "Comprehensive health check including system dependencies and resource usage.",
        "responses": {
          "200": {
            "description": "System healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "503": {
            "description": "System degraded",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "500": {
            "description": "Health check failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/batch-convert": {
      "post": {
        "tags": ["Batch"],
        "summary": "Batch convert multiple videos",
        "description": "Convert multiple videos in a single request. Maximum 10 URLs per batch.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["urls"],
                "properties": {
                  "urls": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "uri"
                    },
                    "maxItems": 10,
                    "description": "Array of video URLs to convert",
                    "example": [
                      "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
                      "https://www.youtube.com/watch?v=oHg5SJYRHA0"
                    ]
                  },
                  "audioQuality": {
                    "type": "string",
                    "enum": ["128", "192", "256", "320"],
                    "default": "320",
                    "description": "Audio quality in kbps"
                  },
                  "metadata": {
                    "$ref": "#/components/schemas/Metadata"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Batch conversion completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "batchId": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/ConvertResponse"
                      }
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "url": {
                            "type": "string"
                          },
                          "error": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "summary": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "integer"
                        },
                        "successful": {
                          "type": "integer"
                        },
                        "failed": {
                          "type": "integer"
                        }
                      }
                    },
                    "processingTime": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "429": {
            "description": "Rate limit exceeded"
          }
        }
      }
    },
    "/api/playlist": {
      "post": {
        "tags": ["Batch"],
        "summary": "Get playlist information",
        "description": "Extract video URLs and metadata from a playlist.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["url"],
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "Playlist URL",
                    "example": "https://www.youtube.com/playlist?list=PLrAXtmRdnEQy1kJr5F3OzgWg5FiBCJo1D"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Playlist information retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "playlistId": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "playlistTitle": {
                      "type": "string"
                    },
                    "totalVideos": {
                      "type": "integer"
                    },
                    "videoUrls": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "format": "uri"
                      }
                    },
                    "previewVideos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "url": {
                            "type": "string",
                            "format": "uri"
                          },
                          "title": {
                            "type": "string"
                          },
                          "thumbnail": {
                            "type": "string",
                            "format": "uri"
                          },
                          "duration": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "note": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/convert-format": {
      "post": {
        "tags": ["Format"],
        "summary": "Convert video to multiple formats",
        "description": "Convert videos to MP3, WAV, FLAC, MP4, or M4A formats.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["url"],
                "properties": {
                  "url": {
                    "type": "string",
                    "format": "uri",
                    "description": "Video URL",
                    "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                  },
                  "format": {
                    "type": "string",
                    "enum": ["mp3", "wav", "flac", "mp4", "m4a"],
                    "default": "mp3",
                    "description": "Output format"
                  },
                  "audioQuality": {
                    "type": "string",
                    "enum": ["128", "192", "256", "320"],
                    "default": "320",
                    "description": "Audio quality in kbps (for audio formats)"
                  },
                  "videoQuality": {
                    "type": "string",
                    "enum": ["480", "720", "1080"],
                    "default": "720",
                    "description": "Video quality (for MP4 format)"
                  },
                  "metadata": {
                    "$ref": "#/components/schemas/Metadata"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Format conversion completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "requestId": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "format": {
                      "type": "string"
                    },
                    "videoTitle": {
                      "type": "string"
                    },
                    "thumbnailUrl": {
                      "type": "string",
                      "format": "uri"
                    },
                    "duration": {
                      "type": "string"
                    },
                    "downloadUrl": {
                      "type": "string",
                      "format": "uri"
                    },
                    "audioQuality": {
                      "type": "string",
                      "nullable": true
                    },
                    "videoQuality": {
                      "type": "string",
                      "nullable": true
                    },
                    "processingTime": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Conversion failed"
          }
        }
      }
    },
    "/api/status": {
      "get": {
        "tags": ["Health"],
        "summary": "API status",
        "description": "Get API status information and available endpoints.",
        "responses": {
          "200": {
            "description": "API status information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PreviewRequest": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "YouTube video URL",
            "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
          }
        }
      },
      "PreviewResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "videoTitle": {
            "type": "string",
            "description": "Video title",
            "example": "Rick Astley - Never Gonna Give You Up"
          },
          "thumbnailUrl": {
            "type": "string",
            "format": "uri",
            "description": "Video thumbnail URL",
            "example": "https://i.ytimg.com/vi/dQw4w9WgXcQ/maxresdefault.jpg"
          },
          "duration": {
            "type": "string",
            "description": "Video duration",
            "example": "3:33"
          },
          "channel": {
            "type": "string",
            "description": "Channel name",
            "example": "Rick Astley"
          },
          "viewCount": {
            "type": "integer",
            "description": "View count",
            "example": 1234567890
          },
          "uploadDate": {
            "type": "string",
            "description": "Upload date",
            "example": "20091025"
          },
          "processingTime": {
            "type": "string",
            "description": "Processing time for the request",
            "example": "1250ms"
          }
        }
      },
      "ConvertRequest": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": {
            "type": "string",
            "format": "uri",
            "description": "YouTube video URL",
            "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
          },
          "audioQuality": {
            "type": "string",
            "enum": ["128", "192", "256", "320"],
            "default": "320",
            "description": "Audio quality in kbps",
            "example": "320"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "Custom title for the MP3 file (max 100 characters)",
                "example": "My Custom Title",
                "maxLength": 100
              },
              "artist": {
                "type": "string",
                "description": "Custom artist name for the MP3 file (max 100 characters)",
                "example": "Custom Artist",
                "maxLength": 100
              }
            }
          }
        }
      },
      "ConvertResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "requestId": {
            "type": "string",
            "description": "Unique request identifier",
            "example": "f0bad2f1-1341-4c97-a20b-68cf9867f4a1"
          },
          "videoTitle": {
            "type": "string",
            "description": "Video title",
            "example": "Rick Astley - Never Gonna Give You Up"
          },
          "thumbnailUrl": {
            "type": "string",
            "format": "uri",
            "description": "Video thumbnail URL",
            "example": "https://i.ytimg.com/vi/dQw4w9WgXcQ/maxresdefault.jpg"
          },
          "duration": {
            "type": "string",
            "description": "Video duration",
            "example": "3:33"
          },
          "downloadUrl": {
            "type": "string",
            "format": "uri",
            "description": "Download URL for the converted MP3 file (expires after 1 hour)",
            "example": "http://localhost:3000/downloads/f0bad2f1-1341-4c97-a20b-68cf9867f4a1.mp3"
          },
          "audioQuality": {
            "type": "string",
            "description": "Audio quality used for conversion",
            "example": "320"
          },
          "processingTime": {
            "type": "string",
            "description": "Processing time for the conversion",
            "example": "45000ms"
          }
        }
      },
