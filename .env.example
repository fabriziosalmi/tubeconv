# TubeConv Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CONVERSION_RATE_LIMIT_MAX=5
PREVIEW_RATE_LIMIT_MAX=20

# File Management Configuration
CLEANUP_INTERVAL_MINUTES=60
MAX_FILE_AGE_MINUTES=60
MAX_FILE_SIZE_MB=100
TEMP_DIR=temp
DOWNLOADS_DIR=downloads

# External Dependencies Configuration
YTDLP_BINARY=yt-dlp
FFMPEG_BINARY=ffmpeg

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_ACCESS_LOG=true

# API Configuration
API_VERSION=1.0.0
API_TITLE=TubeConv API
API_DESCRIPTION=YouTube to MP3 Converter API

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Analytics Configuration (optional)
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=/api/analytics

# PWA Configuration
PWA_ENABLED=true
SW_CACHE_NAME=tubeconv-v1.0.0

# Feature Flags
FEATURE_CUSTOM_METADATA=true
FEATURE_PREVIEW_MODE=true
FEATURE_PROGRESS_TRACKING=true
